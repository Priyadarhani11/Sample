<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">

<service-builder dependency-injector="ds" package-path="com.demo.org">
	<namespace>ORG</namespace>
	<!--<entity data-source="sampleDataSource" local-service="true" name="Foo" remote-service="false" session-factory="sampleSessionFactory" table="foo" tx-manager="sampleTransactionManager uuid="true"">-->
	<entity local-service="true" name="Bank" remote-service="true" uuid="true">

		<column name="bankId" primary="true" type="long" />
		<column name="bankName" type="String" />
		<column name="bankAddress" type="String" />
		
	</entity>
	
	<entity local-service="true" name="Employee" remote-service="true" uuid="true">
			<column name="employeeId" primary="true" type="long" />
		<column name="employeeName" type="String" />
		<column name="employeeAddress" type="String" />
		<column name="employeePhoneNo" type="long" />
		<column name="employeePinNo" type="int" />
		<column name="bankId" type="long" />
	</entity>
	
	<entity local-service="true" name="Department" remote-service="true" uuid="true">
		<column name="departmentId" primary="true" type="long" />
		<column name="departmentNo" type="String" />
		<column name="departmentName" type="String" />
		<column name="departmentAddress" type="String" />
		<column name="departmentPin" type="int" />
		<column name="employeeId" type="long" />
		<column name="bankId" type="long" />
	</entity>	
</service-builder>